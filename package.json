{
  "name": "mparser_center",
  "version": "1.0.0",
  "description": "MParser Center",
  "main": "src/app.js",
  "license": "MIT",
  "scripts": {
    "start": "node src/app.js",
    "stop": "pm2 stop mparser-center",
    "restart": "pm2 restart mparser-center",
    "dev": "pm2 start ecosystem.config.js --no-daemon",
    "status": "pm2 status",
    "delete": "pm2 delete mparser-center",
    "lint": "eslint .",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "coverage": "jest --config jest.config.js && start coverage/lcov-report/index.html"
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "pm2": "^5.4.3",
    "sequelize": "^6.35.2",
    "ssh2": "^1.14.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-template-literals": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/__test__/**",
      "!**/node_modules/**"
    ]
  }
}
